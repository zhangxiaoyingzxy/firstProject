        'downloading': '下载中',
        'installing': '安装中',
        'retry': '重试'
    };

    window.latestgames = {
    	'sids': ''
    };
    zs.on('status', function(sid, status) {
    	status = status[sid];
    	$('#doc').append('<span>'+sid+'</span>');
        
        $('.' + sid + '-btn').text(StatusText[status.text]);
    });
    function renderLatestGame(sid) {
    	$.ajax({
    		'type': 'GET',
    		'url': 'http://test.zsall.mobilem.360.cn/detail/getAppsByIds?ids=' + sid,
    		'dataType': 'json',
    		'cache': false,
    		'success': function(response) {
    			//console.log(response[0]);
    			//渲染最近玩过的游戏
    			var data = response[0];
    			for (var key in data) {
    				if (key == 'tag_key_words') {
    					singleData[key] = data[key].split(' ')[0];
    				} else if (key == 'apk_sizes') {
    					singleData[key] = zs.util.formatSize(data[key]);
    				} else {
    					singleData[key] = data[key];
    				}
    			}
    			var gameTemplate = $('#game-item').html();
    			$('.playedGame').html(Mustache.render(gameTemplate, singleData));
    		}
    	});
    };

    //用户最近打开过的三款游戏
    zs.on('games:default', function (status) {

    	var curDay = (new Date).getDate();
    	var index = 0;
    	var keyArr = [];
    	if(!status) {
    		renderLatestGame(defaultId);
    	} else {
    		window.gameStatus = {'1625930':86400,'3203449':172800,'2720322':172800}
    		for (var sid in gameStatus) {
	           	var playDay = new Date(gameStatus[sid]).getDate();
	            var difDay = curDay - playDay;
	            if(difDay == 0) {
	            	var value = '今天玩过'
	            } else {
	            	var value = difDay + '天前玩过'
	            }
	            latestgames[sid] = value;
	            keyArr.push(sid);
	            index++; 
	            var singleData = {};
	            if(index == 2) {
	            	//根据sid获取相关游戏信息
	            	renderLatestGame(sid);
	            }
        	}
        	latestgames['sids'] = keyArr.join(',');
    	}
    });
</script>
